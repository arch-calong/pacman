post_upgrade() {
  if (( $(vercmp $2 6.1.0-8) < 0 )); then
    echo "Adding SyncFirst line to pacman.conf file ..."
    sed -i -e 's/\[options\]/\[options\]\n# If upgrades are available for these packages they will be asked for first\nSyncFirst    = manjaro-system archlinux-keyring manjaro-keyring/' /etc/pacman.conf
  fi
}
